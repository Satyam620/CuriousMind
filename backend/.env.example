# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DB_NAME=curiousmind_db
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:8082

# Data Ingestion Control
ENABLE_DATA_INGESTION=True
ALLOW_BULK_DATA_IMPORT=False
MAX_IMPORT_BATCH_SIZE=1000

# External Services
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True